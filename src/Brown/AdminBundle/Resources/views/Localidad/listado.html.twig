{% extends '::admin-layout.html.twig' %}
{% block title 'Localidades' %}
{% block body %}
    <h1>Localidades</h1>
    <hr>
    <a href="{{ path('admin_localidades_nuevo') }}" class="btn btn-success">Nueva localidad</a>
    <hr>
    {% if localidades|length > 0 %}
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                {% for localidad in localidades %}
                <tr>
                    <td>{{ localidad.nombre }}</td>
                    <td><a href="{{ path('admin_localidades_editar', {'id':localidad.id}) }}"
                           class="btn btn-xs btn-default ttp" title="Editar"><i class="fa fa-pencil"></i></a></td>
                    <td><a onclick="return confirm('¿Está seguro?')" href="{{ path('admin_localidades_borrar', {'id':localidad.id}) }}"
                           class="btn btn-xs btn-default ttp"><i class="fa fa-trash"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info">No hay localidades para mostrar</div>
    {% endif %}
{% endblock %}